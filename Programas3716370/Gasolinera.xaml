<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Programas3716370.Gasolinera"
             Title="Gasolinera">
    <ScrollView>
        <VerticalStackLayout>
  
            <Image Source="gasolin.png"
                   WidthRequest="400"
                   VerticalOptions="Center"
                   Margin="10"/>

            <Entry x:Name="entry1" Placeholder="Digite los galones "
                   Margin="10"/>

            <Entry x:Name="entry2" Placeholder="los litros que equivale y el precio:"
                   Margin="10"/>

            <Button 
                Text="Ver resultado"
                Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>